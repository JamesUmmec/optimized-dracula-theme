{
  // File encoding and eol settings.
  "files.encoding": "utf8",
  "files.eol": "\n",
  "editor.tabSize": 2,

  // Prettier code formatter settings for this repo.
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.ignorePath": ".prettierignore",

  // Spell checker ext config, see ./extensions.json.
  "cSpell.useGitignore": true,
  "cSpell.words": [
    "goland",
    "gruvbox",
    "harty",
    "iosevka",
    "jamesummex",
    "metaboard",
    "sarasa",
    "ummex",
    "vsix"
  ]
}
